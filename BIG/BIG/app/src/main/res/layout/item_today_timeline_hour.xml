<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/hour_text"
        android:layout_width="48dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:padding="4dp"
        android:text="07"
        android:textColor="#888888"
        android:textSize="16sp" />

    <FrameLayout
        android:id="@+id/important_column"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="@drawable/timeline_hour_background">
        <!-- Important tasks will be added here programmatically -->
    </FrameLayout>

    <FrameLayout
        android:id="@+id/category1_column"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="@drawable/timeline_hour_background">
        <!-- Category 1 tasks will be added here programmatically -->
    </FrameLayout>

    <FrameLayout
        android:id="@+id/category2_column"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="@drawable/timeline_hour_background">
        <!-- Category 2 tasks will be added here programmatically -->
    </FrameLayout>

    <FrameLayout
        android:id="@+id/category3_column"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="@drawable/timeline_hour_background">
        <!-- Category 3 tasks will be added here programmatically -->
    </FrameLayout>

    <FrameLayout
        android:id="@+id/category4_column"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="@drawable/timeline_hour_background">
        <!-- Category 4 tasks will be added here programmatically -->
    </FrameLayout>

</LinearLayout>